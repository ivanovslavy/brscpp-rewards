// package.json
{
  "name": "brscpp-rewards",
  "version": "1.0.0",
  "description": "BRSCPP Bounty Reward System with Native/ERC20 Support",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:bsc-testnet": "hardhat run scripts/deploy.js --network bscTestnet",
    "deploy:amoy": "hardhat run scripts/deploy.js --network amoy",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "test:localhost": "hardhat run scripts/test-rewards.js --network localhost",
    "test:sepolia": "hardhat run scripts/test-rewards.js --network sepolia",
    "test:bsc-testnet": "hardhat run scripts/test-rewards.js --network bscTestnet",
    "test:amoy": "hardhat run scripts/test-rewards.js --network amoy",
    "wallets:create": "hardhat run scripts/create-5-wallets.js",
    "wallets:drain:sepolia": "hardhat run scripts/drain-wallets.js --network sepolia",
    "wallets:drain:bsc-testnet": "hardhat run scripts/drain-wallets.js --network bscTestnet",
    "wallets:drain:amoy": "hardhat run scripts/drain-wallets.js --network amoy",
    "wallets:drain:mainnet": "hardhat run scripts/drain-wallets.js --network mainnet",
    "wallets:drain:bsc": "hardhat run scripts/drain-wallets.js --network bsc",
    "wallets:drain:polygon": "hardhat run scripts/drain-wallets.js --network polygon",
    "slither": "slither . --filter-paths 'node_modules|test' --exclude naming-convention,solc-version",
    "slither:json": "./scripts/run-slither.sh"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contracts",
    "bounty",
    "rewards"
  ],
  "author": "S.Ivanov",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.5.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.27.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  }
}
